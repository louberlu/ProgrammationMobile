<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titre_textView"
        android:layout_width="308dp"
        android:layout_height="75dp"
        android:labelFor="@id/nombre_editTextNumber"
        android:text="Converstisseur de chiffre en lettre"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.091" />

    <EditText
        android:id="@+id/nombre_editTextNumber"
        android:layout_width="361dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:autofillHints="Saisissez un nombre"
        android:ems="10"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titre_textView" />

    <TextView
        android:id="@+id/frTitre_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FranÃ§ais: "
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.175"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombre_editTextNumber"
        app:layout_constraintVertical_bias="0.327" />

    <TextView
        android:id="@+id/enTitre_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English: "
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.202"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frTitre_textView"
        app:layout_constraintVertical_bias="0.381" />

    <Button
        android:id="@+id/convertir_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/nombre_editTextNumber"
        app:layout_constraintVertical_bias="0.136" />

    <TextView
        android:id="@+id/fr_textView"
        android:layout_width="189dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.704"
        app:layout_constraintStart_toEndOf="@+id/frTitre_textView"
        app:layout_constraintTop_toBottomOf="@+id/convertir_button"
        app:layout_constraintVertical_bias="0.219" />

    <TextView
        android:id="@+id/en_textView"
        android:layout_width="189dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.683"
        app:layout_constraintStart_toEndOf="@id/enTitre_textView"
        app:layout_constraintTop_toTopOf="@id/fr_textView"
        app:layout_constraintVertical_bias="0.453" />

    <TextView
        android:id="@+id/deTitre_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Allemand: "
        android:textSize="20sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enTitre_textView"
        app:layout_constraintVertical_bias="0.531" />

    <TextView
        android:id="@+id/de_textView"
        android:layout_width="189dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.708"
        app:layout_constraintStart_toEndOf="@+id/deTitre_textView"
        app:layout_constraintTop_toBottomOf="@+id/en_textView"
        app:layout_constraintVertical_bias="0.446" />

</androidx.constraintlayout.widget.ConstraintLayout>